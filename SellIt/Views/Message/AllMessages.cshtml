@using SellIt.Core.ViewModels.Messages
@model IEnumerable<AllMessagesViewModel> 


@foreach (var item in Model)
{
    <table class="table">
        <thead>
            <tr>
                <th scope="col">User</th>
                <th scope="col">Product</th>
                <th scope="col">Date</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>@item.UserName</td>            
                <td>@item.ProductName</td>
                <td>@item.Date</td>
            </tr>
            <a asp-action="GetProductMessageById" asp-controller="Message" asp-route-id="@item.Id" class="btn btn-success">View</a>
        </tbody>
    </table>
}
