@using SellIt.Core.ViewModels.ReplayProductMessage
@model IEnumerable<ReplyProductMessagesViewModel>


<table class="table">
    <thead>
        <tr>
            <th scope="col">UserName</th>
            <th scope="col">Text</th>
            <th></th>
        </tr>
    </thead>
    @foreach (var item in Model)
    {
        <tbody>
            <tr>
                <td>@item.OwnerUserName</td>
                <td>@item.Text</td>
                    <td>
                        <a asp-action="ReplyProductMessage" asp-controller="ReplyProductMessage" class="btn btn-primary" asp-route-id="@item.ProductMessageId">Replay</a>
                    </td>           
            </tr>
        </tbody>
    }
</table>
