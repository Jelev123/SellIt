@using SellIt.Core.ViewModels.Product
@model GetByIdAndLikeViewModel

              
<div>
    <form method="post" enctype="multipart/form-data">
        <div class="col-md-3">
            <div class="form-group">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>

            </div>
            <div class="form-group">
                <label asp-for="Description"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                
            <div class="form-group">
                <label asp-for="GalleryFiles"></label>
                <input asp-for="GalleryFiles" class="form-control" />
                <span asp-validation-for="GalleryFiles" class="text-danger"></span>
            </div>
                <label asp-for="Price"></label>
                <input asp-for="Price" class="form-control" />
            </div>
        </div>
        @foreach (var item in Model.Gallery)
        {
            <img width="400px" src="@item.URL" alt="@item.Name">
            <a asp-action="DeleteImage" asp-controller="Image" asp-route-id="@item.Id" asp-route-productId="@item.ProductId" class="btn btn-danger">Delete</a>
        }
        <div class="col-md-3">
            <span asp-validation-for="CategoryName" class="text-danger"></span>
            <label asp-for="CategoryName"></label>
            <select class="form-control text-primary" id="categories" asp-for="CategoryName">
                <option selected disabled><------></></option>
                @foreach (var category in (IEnumerable<AddProductViewModel>)this.ViewData["categories"])
                {
                    <option value="@category.CategoryName">@category.CategoryName</option>
                }
            </select>
    </form>
    <div />
    <div class="d-flex justify-content-center mt-3">
        <button class="btn btn-primary font-weight-bold">Edit</button>
    </div>
</div>
</div>