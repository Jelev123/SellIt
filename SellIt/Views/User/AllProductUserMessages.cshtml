@using SellIt.Core.ViewModels.ProductMessage
@model IEnumerable<SendMessageViewModel>

    @if (Model.Any())
    {

<table class="table">
    <thead>
        <tr>
            <th scope="col">User</th>
            <th scope="col">Message</th>
            <th scope="col">Product</th>
        </tr>
    </thead>

    @foreach (var item in Model)
    {
        <tbody>
            <tr>
                <td>@item.UserName</td>
                <td>@item.Text</td>
                <td>@item.ProductName</td>
                <td><img width="100px" src="@item.ProductImage"></td>
            </tr>

            @foreach (var item2 in item.ReplyProductMessages)
            {
                <tr>
                    <td>@item2.ReplyerUserName</td>
                    <td>@item2.ProductMessageText</td>
                </tr>
            }
        </tbody>
        <td>
            <a asp-action="ReplyProductMessage" asp-controller="ReplyProductMessage" class="btn btn-primary" asp-route-id="@item.Id">Reply</a>

        </td>
    }
</table>
}
else
{
        <h3>No messages</h3>

}