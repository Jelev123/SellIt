@using SellIt.Core.ViewModels.Product
@model IEnumerable<MyProductsViewModel>

@if (Model.Any())
{
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="cold-md-4">
                <div class="row">
                    <section class="p-0">
                        <a asp-action="GetProductById" asp-controller="Product" class="btn" asp-route-id="@item.Id">
                            <img width="400px" src="@item.CoverPhoto" alt="@item.Name">
                        </a>
                        <div>
                            <ul class="list-group">
                                <li class="list-group-item">Category: @item.CategoryName</li>
                                <li class="list-group-item">@item.Name</li>
                                <li class="list-group-item">@item.Description</li>
                                <li class="list-group-item">@item.Price $</li>
                            </ul>
                        </div>
                        @if (item.IsAprooved == false)
                        {
                            <h5 style="color:red">The item is checking </h5>
                        }
                    </section>
                </div>
                <a id="random" asp-route-id="@item.Id" class="btn btn-success">Send Message</a>
                <div>
                </div>
            </div>
        }
    </div>
}
else
{
    <h1>No products</h1>
}

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<div id="contentContainer"></div>

<style>
    #contentContainer {
        display: flex;
        align-items: center;
    }

    #textInput {
        margin-right: 10px;
    }
</style>

<script>
    let randomButton = $("#random");
    randomButton.on("click", function (event) {
        event.preventDefault();
        let inputElement = $('<input type="text" id="textInput">');
        let sendButton = $('<button id="sendButton">Send</button>');
        let container = $('<div></div>').append(inputElement).append(sendButton);
        $('#contentContainer').empty().append(container);
        sendButton.on("click", function () {
            let inputValue = $('#textInput').val();
            
            @foreach (var item in Model)
            {
                var itemId = item.Id;
                @:$.ajax({
                @:    url: `/Message/SendMessage`,
                @:    type: "POST",
                @:    data: { id: @itemId, message: inputValue },
                @:    success: function (response) {
                @:        $('#contentContainer').html(response);
                @:    },
                @:    error: function (xhr, status, error) {
                @:        console.log("An error occurred:", error);
                @:    }
                @:});
            }
        });
    });
</script>
